<launch>
    
    <param name="/use_sim_time" value="ture"/>
    <node pkg="rosbag" type="play" name="playbag" args="--clock -r 2 /home/ziv/sunshine_dateset/building-002.bag /rslidar_points:=/velodyne_points"/>

